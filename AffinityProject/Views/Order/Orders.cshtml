@model IEnumerable<AffinityProject.ViewModels.OrderViewModel>

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<a asp-area="" asp-controller="Order" asp-action="AddOrUpdate" class="btn btn-default btn-lg btn-block">Create new order</a>

<table class="table">
    <tr>
        <th>CustomerName</th>
        <th>Order Date</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Item Description</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                <a asp-area="" asp-controller="Order" asp-action="AddOrUpdate" asp-route-id="@item.Id" class="btn btn-default btn-block">Edit</a>
            </td>
            <td>
                <a asp-area="" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-default btn-block">Delete</a>
            </td>
</tr>
    }
</table>