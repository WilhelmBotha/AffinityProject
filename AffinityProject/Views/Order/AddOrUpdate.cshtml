@model AffinityProject.ViewModels.OrderViewModel


    <h2>@ViewData["Title"]</h2>

    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddOrUpdate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    @Html.DropDownListFor(x => Model.CustomerId, new SelectList(Model.AvailableCustomers, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Customer" })
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                    <br />
                    <label asp-for="ItemDescription" class="control-label"></label>
                    <input asp-for="ItemDescription" class="form-control" asp-items="ViewBag.ItemDescription"></input>
                    <span asp-validation-for="ItemDescription" class="text-danger"></span>
                    <br />
                    <label asp-for="OrderDate" class="control-label"></label>
                    <input asp-for="OrderDate" class="form-control" asp-items="ViewBag.OrderDate"></input>
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                    <br />
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" asp-items="ViewBag.Price"></input>
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <br />
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" asp-items="ViewBag.Quantity"></input>
                    <span asp-validation-for="Quantity" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="@ViewData["Title"]" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
