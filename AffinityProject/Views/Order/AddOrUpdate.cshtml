@model AffinityProject.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Order" asp-action="AddOrUpdate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></input>
                <label asp-for="ItemDescription" class="control-label"></label>
                <input asp-for="ItemDescription" class="form-control" asp-items="ViewBag.ItemDescription"></input>
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" asp-items="ViewBag.OrderDate"></input>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" asp-items="ViewBag.Price"></input>
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" asp-items="ViewBag.Quantity"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
